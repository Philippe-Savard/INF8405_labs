<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repeating_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_play"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="117dp"
        android:backgroundTint="#00A400"
        android:fontFamily="sans-serif-medium"
        android:onClick="onButtonPlay"
        android:text="PLAY"
        android:textColor="#FBF9F9"
        android:textSize="30sp"
        app:cornerRadius="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_main_title" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="117dp"
        android:backgroundTint="#3D5AFE"
        android:onClick="onAboutButtonClick"
        android:text="ABOUT"
        android:textColor="#FBFBFB"
        android:textSize="30sp"
        app:cornerRadius="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_play" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#B70000"
        android:onClick="onButtonCloseApp"
        android:text="EXIT"
        android:textColor="#FBFBFB"
        android:textSize="30sp"
        app:cornerRadius="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_main_title"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/faster_one"
        android:text="@string/main_title"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>